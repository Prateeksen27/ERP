<%- include('partials/header.ejs') %>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Leave Portal</h1>
                        <ol class="breadcrumb mb-4">
                            <button class="btn btn-primary"><a href="/studentDashboard/leave/apply" class="text-decoration-none" style="color: white;">Apply For Leave</a> </button>
                        </ol>
                    </div>
                    <div class="previous-applications">
                        <h4 class="mt-4" style="margin-left: 20px;">Previous Applicaions</h1>
                            <% if (locals.leave.length>0) { %>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                  <th scope="col">Sl.NO</th>
                                  <th scope="col">Reason</th>
                                  <th scope="col">From</th>
                                  <th scope="col">To</th>
                                  <th scope="col">Status</th>
                                </tr>
                              </thead>
                              <tbody>
                                    <% for( let i = 0; i < leave.length; i++ ) { %>
                                        <tr>
                                            <td><%= i+1 %></td>
                                            <td> <%= leave[i].reason %> </td>
                                            <td> <%= leave[i].start_date %> </td>
                                            <td> <%= leave[i].end_date %> </td>
                                            <td> <%= leave[i].status %> </td>
                                        </tr>
                                    <% } %>
                                  
                              </tbody>
                        </table>
                        <% } else { %>
                            <div class="container mt-5">
                                <div class="row">
                                  <div class="col-md-6 offset-md-3">
                                    <p class="m-auto text-center">No data found</p>
                                  </div>
                                </div>
                              </div>
                          <% } %> 
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2023</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="/js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
        <script src="assets/demo/chart-area-demo.js"></script>
        <script src="assets/demo/chart-bar-demo.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
        <script src="/js/datatables-simple-demo.js"></script>
    </body>
</html>
